@{
    Layout = null;
}
@{
    ViewBag.Title = "Մուտք";

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Բանկ</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div>
        <form method="post" style="margin:10% auto; text-align:center;">
            <div class="form-group">
                <label>Մուտքանուն</label>
                <input class="form-control" name="userName" type="text" style="border-color: #333; margin:auto;" />
            </div>
            <div class="form-group">
                <label>Գաղտնաբառ</label>
                <input class="form-control" name="password" type="password" style="border-color: #333; margin:auto;" />
            </div>
            <input class="btn" value="Մուտք" type="submit" style="background: #333; color:#9d9d9d; margin-top: 15px;" />

        </form>
    </div>
    @{
        if (TempData["msg"] != null)
        {
            <script type="text/javascript">

            alert('@TempData["msg"]');
            </script>
        }
    }
</body>
</html>
